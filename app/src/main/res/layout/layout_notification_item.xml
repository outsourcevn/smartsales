<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:maxLines="2"
        android:text="Tieu de cua thong bao"
        android:textColor="@color/color_353535"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Noi dung cua thong bao \n noi dung thong bao \n noi dung thong bao"
        android:textColor="@color/color_353535"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_content"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="3dp"
        android:gravity="right|center"
        android:text="Tieu de cua thong bao"
        android:textColor="@color/color_353535"
        android:textSize="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_date_created"
        android:layout_marginTop="5dp"
        android:background="#d2d2d2" />

</RelativeLayout>