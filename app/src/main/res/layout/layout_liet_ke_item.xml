<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/layout_delete_edit"
        android:text="Mã: VIETVANTUE01102"
        android:textColor="@color/color_353535"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_code"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/layout_delete_edit"
        android:text="Trạng thái: Đã xử lý"
        android:textColor="@color/color_353535"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/layout_delete_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_status"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_code"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_delete_item" />

        <ImageView
            android:id="@+id/btn_send_internet"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_internet" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_delete_edit"
        android:layout_marginTop="3dp"
        android:background="#d2d2d2" />

</RelativeLayout>