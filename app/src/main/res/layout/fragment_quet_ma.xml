<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.collalab.demoapp.fragment.QuetTabFragment">


    <RadioGroup
        android:id="@+id/radio_group_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/radio_btn_subsequence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:checked="true"
            android:drawableRight="@drawable/ic_subsequence"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Liên tục"
            android:textColor="@color/color_353535" />

        <RadioButton
            android:id="@+id/radio_btn_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:drawableRight="@drawable/ic_sms"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Gửi tin nhắn SMS"
            android:textColor="@color/color_353535" />

        <RadioButton
            android:id="@+id/radio_btn_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:drawableRight="@drawable/ic_internet"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Gửi thông qua Internet"
            android:textColor="@color/color_353535" />

    </RadioGroup>

</RelativeLayout>
